                              <field name="observations"/>
                          </form>
                          <tree string="Extra">
                              <field name="product_id"/>
                              <field name="cost"/>
                              <field name="price"/>
                              <field name="tour_status"/>
                          </tree>
                      </field>
                </group>
             </page>
            </notebook>
          </field>
        </record>
    </data>
</openerp>
