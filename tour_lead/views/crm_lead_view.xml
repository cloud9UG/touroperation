                              <field name="tour_status"/>
                          </tree>
                      </field>
                </group>
             </page>
             <page string="Ticket"> 
                 <group> 
                      <field name="fticket_line_ids" nolabel="1">
                          <form string="Ticket">
                              <field name="product_id"/>
                              <field name="start_date"/>
                              <field name="end_date"/>
                              <field name="cost"/>
                              <field name="price"/>
                              <field name="limit_date"/>
                              <field name="tour_status"/>
                              <field name="passengers"/>
                              <field name="agent_commission"/>
                              <field name="emergency_contact"/>
